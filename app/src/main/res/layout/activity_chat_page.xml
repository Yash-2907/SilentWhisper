<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MyProfile"
    android:background="@color/black">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        android:background="#00000000"
        app:cardUseCompatPadding="false">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/anime_banner"
        android:scaleType="centerCrop"
        android:background="#00000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#00000000"
        android:padding="6dp"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/backbtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/circleicon"
            android:src="@drawable/backarrow"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/container_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/dp_circle"
            android:src="@drawable/swlogo"
            android:clipToOutline="true"
            android:layout_marginStart="15dp"
            android:scaleType="centerCrop"
            android:elevation="9dp"
            android:layout_marginEnd="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alice"
            android:textSize="28dp"
            android:textColor="@color/white" />

    </LinearLayout>
</androidx.cardview.widget.CardView>


<androidx.recyclerview.widget.RecyclerView
        android:id="@+id/addRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:visibility="visible"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        >
    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:backgroundTint="@color/darkgrey"
    android:background="@drawable/roundedpanel"
    android:gravity="center_vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:elevation="8dp">

    <EditText
        android:id="@+id/searchInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="10dp"
        android:hint="Message"
        android:background="#00000000"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:inputType="textMultiLine"
        android:gravity="top|start"
    android:scrollHorizontally="false"
    android:maxLines="5"
    android:overScrollMode="always"
    android:minLines="1" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/linkbtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/linklogo"
        android:background="#00000000"
        android:layout_marginRight="8dp" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/sendbtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/send_arrow"
        android:background="#00000000"
        android:layout_marginRight="10dp" />
</LinearLayout>


    </LinearLayout>